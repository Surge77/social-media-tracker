# ================================================================
# DevTrends - Environment Variables
# ================================================================
# Copy this file to .env.local and fill in your values.
# NEVER commit .env.local — it's in .gitignore.
#
# Sources are grouped by: authentication required → optional config.
# Public/keyless sources (RSS, npm registry, etc.) are configured
# in src/lib/constants/data-sources.ts — not here.
# ================================================================


# --------------------------------------------------
# SUPABASE (Required)
# --------------------------------------------------
# Get these from: https://supabase.com → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=


# --------------------------------------------------
# GITHUB API (Required)
# --------------------------------------------------
# Create a Personal Access Token (classic) with public_repo scope
# https://github.com/settings/tokens
# Rate: 5,000 req/hr with token, 60 req/hr without
GITHUB_TOKEN=


# --------------------------------------------------
# STACK OVERFLOW API (Required)
# --------------------------------------------------
# Register an app: https://stackapps.com/apps/oauth/register
# Rate: 10,000 req/day with key, 300/day without
STACKOVERFLOW_API_KEY=


# --------------------------------------------------
# REDDIT API (Required)
# --------------------------------------------------
# Create an app: https://www.reddit.com/prefs/apps
# Choose "script" type for server-side usage
# Rate: 60 req/min with OAuth
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=DevTrends/1.0


# --------------------------------------------------
# DEV.TO API (Optional — works without key)
# --------------------------------------------------
# Generate at: https://dev.to/settings/extensions
# Rate: 30 req/30s without key, higher with key
DEVTO_API_KEY=


# --------------------------------------------------
# NEWS SOURCES (Required for news features)
# --------------------------------------------------
# NewsAPI: https://newsapi.org/register
# Rate: 100 req/day (dev), production requires paid plan ($449/mo)
NEWSAPI_KEY=

# GNews: https://gnews.io (alternative to NewsAPI, 100 req/day free)
GNEWS_API_KEY=


# --------------------------------------------------
# JOB MARKET SOURCES (Required for job features)
# --------------------------------------------------
# Adzuna: https://developer.adzuna.com
# Rate: 250 req/month (free tier)
ADZUNA_APP_ID=
ADZUNA_API_KEY=

# JSearch via RapidAPI: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
# Rate: 500 req/month (free tier)
RAPIDAPI_KEY=


# --------------------------------------------------
# PACKAGE REGISTRY TOKENS (Optional — higher rate limits)
# --------------------------------------------------
# npm: https://www.npmjs.com/settings/~/tokens (optional, public data is free)
NPM_TOKEN=

# Libraries.io: https://libraries.io/api (tracks package ecosystems)
# Rate: 60 req/min with key
LIBRARIESIO_API_KEY=


# --------------------------------------------------
# AI / NLP SERVICES (Optional — for advanced features)
# --------------------------------------------------
# Used for: sentiment analysis, tech extraction, summarization
# Start without these. Add when you need Phase 3+ features.

# Anthropic Claude: https://console.anthropic.com
ANTHROPIC_API_KEY=

# OpenAI: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Hugging Face Inference API: https://huggingface.co/settings/tokens
# Free tier for open models (DistilBERT, sentiment models)
HUGGINGFACE_API_KEY=


# --------------------------------------------------
# CACHING & RATE LIMITING (Optional)
# --------------------------------------------------
# Upstash Redis: https://console.upstash.com (free tier: 10k commands/day)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=


# --------------------------------------------------
# MONITORING & ANALYTICS (Add later)
# --------------------------------------------------
# Sentry: https://sentry.io
SENTRY_DSN=

# Axiom: https://axiom.co (log aggregation)
AXIOM_TOKEN=

# PostHog: https://posthog.com (product analytics, free tier generous)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=


# --------------------------------------------------
# EMAIL (Add later)
# --------------------------------------------------
# Resend: https://resend.com (3,000 emails/mo free)
RESEND_API_KEY=


# --------------------------------------------------
# DEPLOYMENT
# --------------------------------------------------
# Set automatically by Vercel — don't fill manually
# VERCEL_URL=
# VERCEL_ENV=
